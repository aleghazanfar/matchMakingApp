
<div class="loaderbody" id="loaderbody">
</div>
<div id="view-all">
    @await Html.PartialAsync("_ViewAll")
</div>
<div class="modal" role="dialog" id="form-modal">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>

    <script>


        $(document).ready(function() {
            debugger
            
            $(document).ajaxStart(function() {
                $("#overlay").fadeIn(100);
            });
            LoadDefaultTable();
            
            $(document).ajaxComplete(function() {
                setTimeout(function() {
                    $("#overlay").fadeOut(100)
                }, 100);
            });

        });
        function LoadDefaultTable() {
            table = new $('#memberListTable').DataTable(
                {

                    ajax: {
                        url: "/Member/GetMembersList",
                        type: "POST",
                    },
                    search: {
                        return: true
                    },
                    processing: true,
                    serverSide: true,
                    filter: true,

                    columns: [
                        { data: "id" },
                        { data: "name" },
                        { data: "parantage" },
                        {
                            data: "gender", name: "gender",
                            render: function(data, type) {
                                if (type === 'display') {
                                    let vtype = '';
                                    switch (data) {
                                        case 'Male':
                                            vtype = 'bg-success';
                                            break;
                                        case 'Female':
                                            vtype = 'bg-info';
                                            break;
                                    }
                                    return `<span class="badge ${vtype} ">${data}</span>`;
                                }
                                return data;
                            }
                        },

                        { data: "jobPosition" },
                        {
                            data: 'id', name: 'action',
                            render: function(data) {
                                return `<a href="/Member/UpSert?vId=${data}" class="btn btn-warning btn-sm"><i class="fa fa-pen"></i> Edit</a> | <a href="/Member/Profile?vId=${data}" class="btn btn-secondary btn-sm"><i class="fa fa-credit-card"></i> Detail</a> `;


                            }

                        },

                    ]

                }
            );

        }
    </script>


}
